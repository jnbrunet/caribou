# Caribou
find_package(Caribou COMPONENTS Algebra Geometry Topology Mechanics REQUIRED)
list(APPEND CMAKE_MODULE_PATH "${Caribou_DIR}")

# Python bindings
if (CARIBOU_WITH_SP3)
